{
  "extends": [
    "Kong/public-shared-renovate//scoped/frontend/base"
  ],
  "packageRules": [
    {
      "groupName": "node engines range",
      "groupSlug": "node-engines",
      "matchPackageNames": [
        "node"
      ],
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "automerge": true,
      "groupName": "all shiki dependencies",
      "groupSlug": "all-shiki-dependencies",
      "matchPackageNames": [
        "/^(.*)?shiki/"
      ]
    }
  ]
}
