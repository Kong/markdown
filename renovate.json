{
  "extends": [
    "github>Kong/public-shared-renovate:kong-frontend-config.json"
  ],
  "packageRules": [
    {
      "groupName": "node engines range",
      "groupSlug": "node-engines",
      "matchPackageNames": [
        "node"
      ],
      "matchDepTypes": [
        "engines"
      ],
      "enabled": false
    },
    {
      "automerge": true,
      "groupName": "all shiki dependencies",
      "groupSlug": "all-shiki-dependencies",
      "matchPackagePatterns": [
        "^(.*)?shiki"
      ]
    }
  ]
}
